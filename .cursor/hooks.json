{
  "version": "1",
  "hooks": {
    "afterFileEdit": [
      {
        "command": "./hooks/after_file_edit.sh"
      }
    ],
    "afterShellExecution": [
      {
        "command": "./hooks/after_shell_execution.sh"
      }
    ],
    "stop": [
      {
        "command": "basename $(pwd) | xargs -I{} osascript -e 'display notification \"{} Finished Working\" sound name \"Crystal\"'"
      }
    ]
  }
}
